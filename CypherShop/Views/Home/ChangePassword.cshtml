                        </div>
                        <div class="group">
                            <label for="pass" class="label"> Nhập lại mật khẩu mới</label>
                            @*<input id="pass" type="password" class="input">*@
                            @Html.EditorFor(model => model.Nhaplaimatkhau, new { htmlAttributes = new { @id = "pass", @type = "password", @class = "input" } })
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Đổi mật khẩu">
                        </div>
                        <div class="hr"> </div>
                        <div class="foot-lnk">
                            <a href="Index/Home">Quay lại trang chủ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>










