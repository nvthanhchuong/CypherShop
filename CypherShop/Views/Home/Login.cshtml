<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Usertemp/SignIn/style.css">
</head>
<body>
    <div class="login-wrap">
        <div class="login-html">
            <div class="login-form">
                <div class="sign-in-htm">
                    <form action="#" method="post">
                        <div class="group">
                            <label for="user" class="label"> Tên đăng nhập</label>
                            @*<input id="user" type="text" class="input">*@
                            @Html.EditorFor(model => model.Taikhoan, new { htmlAttributes = new { @id = "user", @type = "text", @class = "input" } })
                        </div>
                        <div class="group">
                            <label for="pass" class="label"> Mật khẩu</label>
                            @*<input id="pass" type="password" class="input">*@
                            @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { @id = "pass", @type = "password", @class = "input" } })
                        </div>
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"> <span class="icon"> </span> Nhớ tên đăng nhập</label>
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Đăng nhập">
                        </div>
                        <div class="hr"> </div>
                        <div class="foot-lnk">
                            <a href="#forgot"> Quên mật khẩu?</a>
                            <br />
                            <br />
                            <br />
                            @*<a href="#sign-up"> Chưa có tài khoản?</a>*@
                            @Html.ActionLink("Chưa có tài khoản", "Registrator", "Home")
                            <br />
                            <br />
                            @Html.ActionLink("Facebook", "LoginFacebook", "Home")
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

