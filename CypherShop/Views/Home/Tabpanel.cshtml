@model CypherShop.Models.ProductDetail
@using System.Globalization;
<!-- Tab panes -->
<div class="tab-content">
    <div id="home" class=" homes tab-pane active clearfix">
        <br />
        <div class="countdown-time-div" style="float: left; width: 250px;">
            <div id="countdown" class="countdown-time clearfix">
                <div class="clearfix">
                    <p class="countdown-end">Kết thúc sau</p><strong id="countdown-days" class="countdown-days"></strong><p class="countdown-text-day">ngày</p>
                </div>
                <div class="clearfix">
                    <strong id="countdown-hours" class="countdown-hours"></strong> <strong id="countdown-minutes" class="countdown-minutes"></strong> <strong id="countdown-seconds" class="countdown-seconds"></strong>
                </div>

            </div>

        </div>
        <div class="slick_dcb" style="float: right;">
            @foreach (var item in Model.ListSanPham)
            {
                    <div class="slick_dcb_product">
                        <a href="@Url.Action("Index","Detail", new { Id = item.MaTL, nsx = item.MaNSX })" style="text-decoration: none;font-family: Arial; color: black;">
                            <img src="~/Images/@item.Anhbia" alt="">
                            <div style="width: 230px; height: 200px; ">
                                <p class="slick_dcb_name">@item.TenSP</p>
                                <p class="clearfix">
                                    <strong class="slick_dcb_price"> @string.Format(new CultureInfo("vi-VN"), "{0:#,###}", @item.Giaban)đ</strong>
                                    <img style="width: 30px; height: 30px; float: right; margin-right: 60px;" class="slick_dcb_freeship" src="~/Images/freeship.svg" alt="Alternate Text" />
                                </p>
                                <strike class="slick_dcb_gianhap">@string.Format(new CultureInfo("vi-VN"), "{0:#,###}", @item.Giaban)đ</strike><p class="slick_dcb_diskout">- @item.Giamgia%</p>
                            </div>
                        </a>
                    </div>
                    }
            </div>
    </div>
