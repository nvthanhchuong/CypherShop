@using CypherShop.Models
@using PagedList.Mvc
@using System.Globalization;
@model PagedList.PagedList<SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="width: 80%; margin: auto; margin-top: 10px;">
    <div class="discount-slick" style="margin-left: 10px;">
        <div><img src="~/Images/dkslide1.jpg" alt="Alternate Text" /></div>
        <div><img src="~/Images/dkslide2.jpg" alt="Alternate Text" /></div>
        <div><img src="~/Images/dkslide3.jpg" alt="Alternate Text" /></div>
        <div><img src="~/Images/dkslide4.jpg" alt="Alternate Text" /></div>
        <div><img src="~/Images/dkslide5.jpg" alt="Alternate Text" /></div>
        <div><img src="~/Images/dkslide6.jpg" alt="Alternate Text" /></div>
        <div><img src="~/Images/dkslide7.jpg" alt="Alternate Text" /></div>
        <div><img src="~/Images/dkslide8.jpg" alt="Alternate Text" /></div>

    </div>
</div>

<script>
    $(document).ready(function () {
        $('.discount-slick').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: true,
            autoplay: true,
            autoplaySpeed: 3500,
        });
    });

</script>
<style>
    .discount-slick .slick-prev {
        margin-left: 40px;
        z-index: 2;
    }

        .discount-slick .slick-prev::before {
            font-size: 40px;
        }

    .discount-slick .slick-next {
        margin-right: 55px;
        z-index: 2;
    }

        .discount-slick .slick-next::before {
            font-size: 40px;
        }

    .product-lt {
        width: 80%;
        max-height: 2500px;
        background-color: white;
        border-radius: 10px;
        margin: 0 auto;
    }

    .sanpham-lt {
        width: 300px;
        height: 420px;
        float: left;
        margin-left: 5px;
        margin-top: 5px;
    }
</style>
<div class="product-lt clearfix">
    @Html.Action("TheLoai", "Products")
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Index","Detail", new { Id = item.MaSP, nsx = item.MaNSX })" style="text-decoration: none;font-family: Arial; float: left;">
            <div class="sanpham-lt product_hover">
                <img style="width:100%; height: 58%" src="~/Images/@item.Anhbia" alt="">
                <p class="product_name">@item.TenSP</p>
                <p class="product_detail" style="color: rgb(20, 53, 195) ;"><strong>@string.Format(new CultureInfo("vi-VN"), "{0:#,###}", @item.Giaban)đ</strong>&emsp; &emsp; <img src="~/Images/freeship.svg" alt="Alternate Text" /></p>
                <p class="product_detail" style="margin-top: -15px;"><i class="product_detail_trike_size" style="color: rgb(148, 218, 239); "><strike style="color: dimgrey;">@string.Format(new CultureInfo("vi-VN"), "{0:#,###}", @item.Giaban)đ</strike>&emsp; &emsp;- @item.Giamgia%</i></p>
            </div>
        </a>
    }
</div>
<br />


<div style="color: dodgerblue; margin-left: 750px;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>
<div class="menutrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
<style>
    .menutrang {
        padding-top: 20px;
        margin-left: 700px;
    }

        .menutrang li {
            display: inline-block;
        }

            .menutrang li a {
                color: dodgerblue;
                float: left;
                padding: 8px 16px;
                margin-left: 3px;
                text-decoration: none;
                border: 1px solid dodgerblue;
                background-color: white;
            }

            .menutrang li a {
                border-radius: 5px;
            }

                .menutrang li a:hover {
                    background-color: dodgerblue;
                    color: white;
                    border-radius: 5px;
                }
</style>
