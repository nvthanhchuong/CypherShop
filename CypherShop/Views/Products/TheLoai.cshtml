@model CypherShop.Models.ProductDetail
<style>
    .product-l li {
        border-bottom: none;
        border-top: none;
    }

        .product-l li a {
            text-decoration: none;
            color: black;
            width: 100%;
            height: 100%;
        }

        .product-l li:hover {
            background-color: #ff3366;
            color: white;
        }

            .product-l li:hover a {
                color: white;
            }
</style>
<div style="float: left; width: 300px; height: 2000px; margin-top: 20px;">
    <ul class="list-group product-l" style="width: 90%; margin: auto;">
        <li class="list-group-item active">Danh Sách Thể Loại</li>
        @foreach (var item in Model.ListTheLoai)
        {
            <li class="list-group-item"><a href="@Url.Action("SPTL", "Products", new { sp = item.MaTL })">@item.TenTheLoai</a></li>


        }

        <li class="list-group-item active">Danh Sách Thể Loại</li>
    </ul>
    </div>

